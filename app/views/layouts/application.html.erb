<!DOCTYPE html>
<html>
<head>
  <title>quv vIt :: <%= controller.controller_name.capitalize %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	
</head>
<body>
	<%= link_to(image_tag('quv_vIt.gif'), home_path) %>
	<div id="wrapper">
		<div class="navbar">
		  <div class="navbar-inner">
		    <div class="container">
		      <a class="btn btn-navbar" data-toggle="collapse" data-target=".collapse">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </a>
		      <div class="nav-collapse">
		        <ul class="nav">
							<li><%= link_to "Home", home_path %></li>
		          <li><%= link_to "Articles", articles_path %></li>
		          <li><%= link_to "Photos", photos_path %></li>
		          <li><%= link_to "Proverbs", proverbs_path %></li>
							<li><%= link_to "Categories", categories_path %></li>
		        </ul>
		      </div>
		    </div>
		  </div>
		</div>

		<!-- MAIN CONTENT -->
		<div class="container">
			<!-- flash messages -->
			<% flash.each do |name, msg| %>
				<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
					<a class="close" data-dismiss="alert">&times;</a>
					<%= msg %>
				</div>
	    <% end %>
			<div class="row">
				<!-- main content placed here -->
				<div class="span12">
					<%= yield %>
				</div>
			</div>
		</div>

		<!-- FOOTER -->
		<footer id="footer">
	    <div class="container">
				<%= render :partial => "partials/footer" %>
	    </div>
	  </footer>
	</div>
</body>
</html>

